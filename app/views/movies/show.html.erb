<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium) %>
        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length} reviews" %></em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Name:</strong></td>
                <td><%= @movie.name %></td>
              </tr>

              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @movie.description %></td>
              </tr>

              <tr>
                <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>

              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>

              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
          <p><%= link_to "Write a Review", new_movie_review_path(@movie) %></p>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @movie.name %></h1>
        <p><%= @movie.description %></p>

        <% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
                <p><%= review.comment %></p>
                <% if review.user == current_user %>
                  <span><%= link_to 'Edit', edit_review_path(review), class:"btn btn-success link-as-button" %> <%= link_to 'Delete', review_path(review), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger link-as-button" %></span>
                <% end %>
              </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_movie_path(@movie), class:"btn btn-success link-as-button" %>
<%= link_to 'Back', movies_path, class:"btn btn-info link-as-button" %>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>
