      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, placeholder:"Name", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, placeholder:"Description of movie", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :movie_length, placeholder:"Length", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :director, placeholder:"Director", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :rating, placeholder:"Rating", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
